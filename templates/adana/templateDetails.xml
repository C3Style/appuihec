	<script type="text/javascript" src="../templates/adana/javascript/jquery-1.4.4.min.js"></script>
	<script type="text/javascript">
		$.noConflict();
 		
		jQuery(document).ready(function($) {
			
			$('.english').slideDown();			
				$('.deutsch').slideUp();	
				
				$('#btn_en').addClass('active');
				$('#btn_de').removeClass('active');
		
			jQuery('#btn_en').click(function(){
				$('.english').slideDown();			
				$('.deutsch').slideUp();	
				
				$('#btn_en').addClass('active');
				$('#btn_de').removeClass('active');
						
			});
			jQuery('#btn_de').click(function(){
				$('.deutsch').slideDown();
				$('.english').slideUp();
	
				$('#btn_de').addClass('active');
				$('#btn_en').removeClass('active');
			});
			
			jQuery('.titlealign img').click(function(){
				$('.titlepreview img').attr('src',$(this).attr('src'));
			});
			
			jQuery('.modulepositions img').toggle(function(){
				$(this).css({'width':'150%','marginLeft':'-25%'});
			}, function(){
				$(this).css({'width':'100%','marginLeft':'0%'});
			});
			
  		});
	</script>
