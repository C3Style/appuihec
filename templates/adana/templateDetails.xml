	<config>
	<fields name="params">
		<fieldset name="basic_configuration" label="TPL_ADANA_SITE_DETAILS">
			<field name="sitetitle"  type="text" default=""
					label="TPL_ADANA_FIELD_SITETITLE_LABEL"
					description="TPL_ADANA_FIELD_SITETITLE_DESCRIPTION"
					filter="string" />
			<field name="siteslogan"  type="text" default=""
					label="TPL_ADANA_FIELD_SITESLOGAN_LABEL"
					description="TPL_ADANA_FIELD_SITESLOGAN_DESCRIPTION"
					filter="string" />
			<field name="copyright"  type="text" default=""
					label="TPL_ADANA_FIELD_COPYRIGHT_LABEL"
					description="TPL_ADANA_FIELD_COPYRIGHT_DESCRIPTION"
					filter="string" />
		</fieldset>
		<fieldset name="configuration" label="TPL_ADANA_CONFIGURATION">
			<field name="titlealign" type="list" default="center"
					label="TPL_ADANA_FIELD_TITLEALIGN_LABEL"
					description="TPL_ADANA_FIELD_TITLEALIGN_DESCRIPTION"
					filter="word">
					<option value="left">TPL_ADANA_FIELD_TITLEALIGN_LEFT</option>
					<option value="center">TPL_ADANA_FIELD_TITLEALIGN_CENTER</option>
					<option value="right">TPL_ADANA_FIELD_TITLEALIGN_RIGHT</option>
			</field>
			
			<field name="logo" type="media" default=""
					label="TPL_ADANA_FIELD_LOGO_LABEL"
					description="TPL_ADANA_FIELD_LOGO_DESCRIPTION" />
			<field name="titleshow" type="list" default="show"
					label="TPL_ADANA_FIELD_TITLESHOW_LABEL"
					description="TPL_ADANA_FIELD_TITLESHOW_DESCRIPTION"
					filter="word">
					<option value="show">TPL_ADANA_FIELD_TITLESHOW_SHOW</option>
					<option value="hide">TPL_ADANA_FIELD_TITLESHOW_HIDE</option>
			</field>					
			<field name="font" type="list" default="sans"
					label="TPL_ADANA_FIELD_FONT_LABEL"
					description="TPL_ADANA_FIELD_FONT_DESCRIPTION"
					filter="word">
					<option value="Sans">Droid Sans</option>
					<option value="Serif">Droid Serif</option>
			</field>
			<field name="color" type="list" default="blue"
					label="TPL_ADANA_FIELD_COLOR_LABEL"
					description="TPL_ADANA_FIELD_COLOR_DESCRIPTION"
					filter="word">
					<option value="red">TPL_ADANA_FIELD_COLOR_RED</option>
					<option value="orange">TPL_ADANA_FIELD_COLOR_ORANGE</option>
					<option value="green">TPL_ADANA_FIELD_COLOR_GREEN</option>
					<option value="blue">TPL_ADANA_FIELD_COLOR_BLUE</option>
					<option value="violet">TPL_ADANA_FIELD_COLOR_VIOLET</option>
					<option value="black">TPL_ADANA_FIELD_COLOR_BLACK</option>
					<option value="brown">TPL_ADANA_FIELD_COLOR_BROWN</option>
					<option value="pink">TPL_ADANA_FIELD_COLOR_PINK</option>
			</field>
		</fieldset>
	</fields>
	</config>
